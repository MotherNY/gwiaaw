@import 'variables'
@import 'normalize'

*,
*:after,
*:before
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

*
  -webkit-transition: all 0.3s ease
  -moz-transition: all 0.3s ease
  -o-transition: all 0.3s ease
  transition: all 0.3s ease

html, body
  height 100%

body
  font-size: 100%
  font-family: Helvetica, Arial, sans-serif
  background #fffe01 url('/img/gradient.png') repeat-x top left scroll
  color $black
  text-align center

img
  max-width 100%

p, li
  font-size 1.6em
  margin 2% 0
  padding 0
  font-family: Helvetica, Arial, sans-serif

h1
  font-size 3em
  font-weight normal
  line-height 1.2
  font-family: Helvetica, Arial, sans-serif
  color $black
  text-align center

h2
  font-size 12em
  font-weight 200
  line-height 1.4
  font-family: 'Blowfish', Helvetica, Arial, sans-serif
  margin 0
  color #ffd60a
  background-image: -webkit-gradient(linear, left top, left bottom, from(#ffd60a), to(#fffe01)); /* Chrome, Safari 4+ */
  background-image: -webkit-linear-gradient(top, #ffd60a, #fffe01); /* Chrome 10-25, iOS 5+, Safari 5.1+ */
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;


.maxwidthcenter
  max-width 1024px
  margin 0 auto

@import 'responsive'
